<section class="mainBG uk-section-default uk-section-large uk-padding-remove-bottom">
  <div class="uk-container">
    {% assign coll = section.settings.collection %}
    <h1 class="uk-margin-medium-bottom uk-text-secondary uk-text-center headingForSection">{{ coll.title }}</h1>
    <div>
      <div class="uk-text-center uk-grid-large uk-child-width-1-3@m" uk-grid>
        {% for product in collections[coll.handle].products %}
        <div class="productHoveBGOvel">
          <a href="{{ product.url }}" class=" uk-link-reset">
          <div class="uk-position-relative">
            <img style="position: relative; z-index: 2; height: 212px; {{ product.metafields.product.product_grid_scale.value }}" loading="lazy"  src="{{ product.featured_image | img_url:'' }}" />
            <div class="productHoverEle uk-position-absolute"></div>
          </div>
          <h2 class="uk-margin-remove-bottom" style="margin-top: 34px !important">{{ product.title }}</h2>
          <div class="uk-margin-small-top uk-margin-small-bottom priceFontSize">{{ product.price | money }}</div>
          
        </a>
        <add-to-cart product_id='{{ product.variants[0].id }}'/>

        </div>
        {% endfor %}
    </div>
  </div>
</section>
{% schema %}
  {
    "name": "Home collection 2",
    "settings": [
      {
        "type":"collection",
        "id":"collection",
        "label":"Collection"
      },
      {
        "type":"text",
        "id":"view_button",
        "label":"Button text"
      }
    ],
    "presets":[
      {
        "name":"Home collection 2",
        "category":"Custom"
      }
    ]
  }
{% endschema %}

