 <div class="banner uk-visible@s">
    <div class="banner-img">
 <div class="sus-banner-img uk-background-cover uk-background-muted uk-height-medium uk-panel uk-flex uk-flex-center  uk-padding-small uk-flex-wrap " style="background-image: url({{ section.settings['banner-image'] | img_url : 'master' }}); width:100%;  height:90vh;  ">
            <h1 style="margin:auto; translate:0px -30px; overflow:hidden; color:white; font-size:3.5vw; width:76vw;    " class="uk-h4 uk-text-center">{{ section.settings['banner-head'] }}</h1>
        </div>
    </div>
  </div>
<!--   mobile -->
  <div class="banner uk-hidden@s ">
    <div class="banner-img">
 <div class=" uk-background-cover uk-background-muted uk-height-medium uk-panel uk-flex uk-flex-center   uk-padding-small uk-flex-wrap " style="background-image: url({{ section.settings['banner-image-mob'] | img_url : 'master' }}); width:100%; height:74vh; ">
            <h2 style="color:white;  width:300vw; margin:auto;    " class="uk-text-center uk-flex uk-flex-center uk-text-bold">{{ section.settings['banner-head'] }}</h2>
        </div>
    </div>
  </div>



{% schema %}
  {
    "name": "hero banner",
    "settings": [
       {
      "type": "text",
      "id": "banner-head",
      "label": "hero banner header"
    },
      {
         "type": "image_picker",
      "id": "banner-image",
      "label": "hero banner image"
      },
      {
         "type": "image_picker",
      "id": "banner-image-mob",
      "label": "hero banner mobile image"
      }
    ]
  }
{% endschema %}

