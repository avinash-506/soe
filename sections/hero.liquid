<section
  class="uk-background-cover hero_section"
  style="background-image: url({{ 'hero_bg.png' | asset_url }});     background-position-y: bottom;
"
>
  <div class="uk-container uk-position-relative">
    <div class="uk-position-left heroLeftElement">
      <img style="height: -webkit-fill-available" loading="lazy" src="{{ 'hero-left.png' | asset_url }}" alt="" />
    </div>
    <div class="uk-position-right heroRightElement">
      <img style="height: -webkit-fill-available" loading="lazy" src="{{ 'hero-right.png' | asset_url }}" alt="" />
    </div>
    <div class="uk-flex uk-flex-middle heroMainTowPart" uk-grid>
      <div class="uk-width-1-3@m">
        <div class="uk-position-relative heroInnerLeftElement">
          <div class="heroLeftInnerText">
            <h1 class="main-font main-line-heigth uk-margin-remove-bottom uk-text-secondary" style="">{{ section.settings.heading }}</h1>
            <p class="uk-margin-small-top">{{ section.settings.text }}</p>
            <div>
              <a href="{{ section.settings.button_link }}">
                <button class="uk-button uk-button-primary">{{ section.settings.button_text }}</button>
              </a>
            </div>
          </div>
        </div>
      </div>
      <div class="uk-width-2-3@m">
        <div class="uk-flex uk-flex-right uk-position-relative heroInnerRightElement">
          {% if section.settings.bg_image != blank %}
          <img class="heroImg" loading="lazy"  src="{{ section.settings.bg_image | img_url : '' }}" alt="" />
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</section>
{% schema %} { "name": "Hero", "settings": [ { "type":"image_picker", "id":"bg_image", "label":"Background image" }, { "type":"text", "id":"heading", "label":"Heading" }, { "type":"text", "id":"text", "label":"Text" }, { "type":"text", "id":"button_text", "label":"Button text" }, { "type":"url", "id":"button_link", "label":"Button Link" } ], "presets":[ { "name":"Hero", "category":"Custom" } ] } {% endschema %} {% stylesheet %} {% endstylesheet %} {% javascript %} {% endjavascript %}
