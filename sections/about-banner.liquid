




 <div class="banner uk-visible@s">
    <div class="banner-img">
 <div class="sus-banner-img uk-background-cover uk-background-muted uk-height-medium uk-panel uk-flex uk-flex-center  uk-padding-small uk-flex-wrap " style="background-image:url({{ section.settings['about-banner'] | img_url:'master' }}); width:100%;  height:90vh;  ">
            <h1 style="margin:auto; translate:0px -30px; overflow:hidden; color:white; font-size:3.5vw; width:300vw;    " class="uk-h4 uk-text-center">{{ section.settings['banner-head'] }}</h1>
        </div>
    </div>
  </div>
<!--   mobile -->
  <div class="banner uk-hidden@s ">
    <div class="banner-img">
 <div class=" uk-background-cover uk-background-muted uk-height-medium uk-panel uk-flex uk-flex-center   uk-padding-small uk-flex-wrap " style="background-image: url({{ section.settings['banner-image-mob'] | img_url : 'master' }}); width:100%; height:74vh; ">
               <h2 style="margin:auto; overflow:hidden; color:white;width:300vw;   " class=" uk-text-center">{{ section.settings['banner-head'] }}</h2>
        </div>
    </div>
  </div>


