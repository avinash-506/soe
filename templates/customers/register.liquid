<script type="application/javascript" defer>
  var colorChLinkWhite = document.getElementsByClassName('color_white');

  for (let i = 0; i < colorChLinkWhite.length; i++) {
    colorChLinkWhite[i].style.setProperty('color', 'white', 'important');
  }
</script>

{% form 'create_customer' %}

<div class="loginPage uk-background-cover uk-position-relative">
  <div class="uk-position-bottom-left uk-visible@m" style="bottom: 62px; left: -88px">
    <img src="{{ 'RegisterPageLeftHeroImg.svg' | asset_url }}" style="width: 380px" alt="" />
  </div>
  <div class="uk-position-bottom-right uk-visible@m" style="bottom: 102px">
    <img src="{{ 'RegisterPageRigthHeroImg.svg' | asset_url }}" style="width: 216px" alt="" />
  </div>
  <div class="uk-container">
    <div>
      <div class="formTBB">
        <div class="formWidth">
          <h3 class="uk-text-bold uk-text-center">Create your account</h3>
          {{ form.errors | default_errors }}

          <div class="uk-margin">
            <div class="uk-form-controls">
              <input class="uk-input uk-border-rounded" placeholder="First Name" type="text" value="" name="customer[first_name]" size="30" />
            </div>
          </div>

          <div class="uk-margin">
            <div class="uk-form-controls">
              <input class="uk-input uk-border-rounded" placeholder="Last Name" type="text" value="" name="customer[last_name]" size="30" />
            </div>
          </div>

          <div class="uk-margin">
            <div class="uk-form-controls">
              <input class="uk-input uk-border-rounded" placeholder="Email" type="email" name="customer[email]" />
            </div>
          </div>

          <div class="uk-margin">
            <div class="uk-form-controls">
              <input class="uk-input uk-border-rounded" placeholder="Password" type="password" name="customer[password]" />
            </div>
          </div>

          <div class="uk-margin">
            <div class="uk-form-controls">
              <input class="uk-button uk-button-primary uk-width-1-1 uk-button-primary" type="submit" value="Create account" />
            </div>
          </div>

          <div>Already have an account? <a href="/account/login" class="uk-link-reset uk-button-link">Login now.</a></div>
        </div>
      </div>
    </div>
  </div>
</div>
{% endform %}

