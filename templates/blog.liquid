<!-- {% section 'custom-blogs' %} -->
<section class="uk-margin-small-top">
  <div class="uk-container">
    <div class="uk-border-rounded uk-background-cover uk-flex uk-flex-middle uk-flex-center" style="background-image: url('{{ 'mainBlogImg.jpg' | asset_url }}'); height:370px">
      <div class="uk-text-center" style="max-width: 412px; width: 88%">
        <h1 class="textWhite">All blog posts</h1>
        <div>
          <form class="uk-search bloGSearch uk-search-default" style="width: 100%">
            <a href="" class="uk-search-icon-flip" uk-search-icon></a>
            <input class="uk-search-input uk-border-rounded" style="background-color: #fff" type="search" placeholder="Search your topic..." aria-label="Search" />
          </form>
        </div>
      </div>
    </div>
  </div>
</section>
<section class="uk-sectione uk-section-default uk-margin-medium-top uk-margin-medium-bottom">
  <div class="uk-container">
    <div class="uk-child-width-1-3@m uk-flex uk-grid-larg" uk-grid>
      {% for blog in blog.articles %}
      <div  class="uk-width-1-3@m">
        <a class="uk-link-reset" href="{{ blog.url }}">
          <div class="uk-border-rounded uk-card uk-card-default uk-overflow-hidden" style="padding: 16px 16px;min-height:540px;">
            <div class="uk-cover-container uk-border-rounded" style="height: 268px">
              <img src="{{ blog.image.src | img_url : '2000x' }}" uk-cover />
            </div>
            <div>
              <h3 class="uk-margin-small-top mainFont uk-margin-remove-bottom">{{ blog.title }}</h3>

              <p class="pmargino" style="font-size: 12px !important ; margin: 6px 0px">
                {{ blog.content | truncate : 120, "...." }}
              </p>

              <p class="uk-margin-remove-bottom uk-text-primary" style="font-size: 12px !important">
                {{ blog.published_at | time_tag: '%b %d, %Y', datetime:'%Y-%m-%d' }}
              </p>
            </div>
          </div>
        </a>
      </div>
      {%- endfor -%}
    </div>
  </div>
</section>
